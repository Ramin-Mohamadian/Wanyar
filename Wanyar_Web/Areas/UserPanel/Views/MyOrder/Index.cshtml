@model IEnumerable<Wanyar.DataLayer.Entities.Order.Order>
@{
    ViewData["Title"] = "فاکتور ها";
}


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">وانیار</a></li>
            <li class="breadcrumb-item active" aria-current="page"> فاکتور های شما </li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> فاکتور های شما </h1></header>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>شماره فاکتور</th>
                                    <th>تاریخ</th>
                                    <th>جمع فاکتور</th>
                                    <th>پرداخت شده</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.OrderId
                                        </td>
                                        <td>
                                            @item.CreateDate
                                        </td>
                                        <td>@item.OrderSum.ToString("#,0")</td>

                                        <td>
                                            @if (item.IsFinaly)
                                            {
                                                <p class="text-success">پرداخت شده</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">پرداخت نشده</p>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-success" href="/UserPanel/MyOrder/ShowOrder/@item.OrderId">نمایش</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
