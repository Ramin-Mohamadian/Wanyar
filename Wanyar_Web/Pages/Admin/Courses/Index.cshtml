@page
@using Wanyar.Core.Services;
@model Wanyar_Web.Pages.Admin.Courses.IndexModel
@{
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست  دوره های سایت</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<a class="btn btn-success" asp-page="CreateCourse">افزودن دوره</a>
<p>

</p>
<table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
    <thead>
        <tr>
            <th>تصویر</th>
            <th>عنوان</th>
            <th>مدرس</th>
            <th>تعداد قسمت</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShowCourses)
        {
            <tr>
                <td>
                    <img src="/Course/thumb/@item.ImageName">
                </td>
                <td>@item.Title</td>
                <td>@item.TeacherId</td>
                <td>@item.EpisodeCount</td>
                <td>
                    <a href="/Admin/Courses/EditeCourse/@item.CourseId" class="btn btn-warning btn-sm">
                        ویرایش
                    </a>

                    <a href="/Admin/Courses/IndexEpisode/@item.CourseId" class="btn btn-primary btn-sm">
                        افزودن جلسه
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

