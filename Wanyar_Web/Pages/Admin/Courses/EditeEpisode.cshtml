@page "{id}"
@model Wanyar_Web.Pages.Admin.Courses.EditeEpisodeModel
@{
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش قسمت</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseEpisode.CourseId" />
        <input type="hidden" asp-for="CourseEpisode.EpisodeId" />
        <input type="hidden" asp-for="CourseEpisode.EpisodeFileName" />
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    اطلاعات جلسه
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان قسمت</label>
                        <input type="text" asp-for="CourseEpisode.EpisodeTitle" class="form-control">
                    </div>
                    <span asp-validation-for="CourseEpisode.EpisodeTitle"></span>

                    <div class="panel-body">
                        <div class="form-group">
                            <label>زمان قسمت</label>
                            <input type="text" asp-for="CourseEpisode.EpisodeTime" class="form-control">
                        </div>
                        <span asp-validation-for="CourseEpisode.EpisodeTime"></span>
                    </div>

                    <div class="form-group">
                        <label> ویدیو این قسمت </label>
                        <input type="file" asp-for="CourseEpisode.EpisodeFileName" name="episodefile" class="form-control">
                        @if (ViewData["ExistFile"]!=null)
                        {
                            <div class="alert alert-danger">
                                <p>
                                    نام فایل تکراری میباشد
                                </p>
                            </div>
                        }
                    </div>

                    <span asp-validation-for="CourseEpisode.EpisodeFileName"></span>


                    <div class="form-group">
                        <label>دسترسی</label>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" asp-for="CourseEpisode.IsFree">رایگان است
                            </label>
                        </div>
                    </div>

                    <input type="submit" value="ثبت" class="form-control btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>