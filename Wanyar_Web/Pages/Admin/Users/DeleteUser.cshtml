@page "{id}"
@model Wanyar_Web.Pages.Admin.Users.DeleteUserModel
@using Wanyar.Core.Convertors;
@{

}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
               حذف کاربر
            </div>
            <div class="panel-body">
                <p>
                   <h1 class="alert alert-warning">
                        آیا از حذف '@Model.UserInformationViewModel.UserName' مطمئن هستید؟
                   </h1>
                   
                </p>
                <form method="post">            

                    <dl class="dl-horizontal">
                        <dt>نام کاربری : </dt>
                        <dd>@Model.UserInformationViewModel.UserName</dd>
                        <dt>ایمیل : </dt>
                        <dd>@Model.UserInformationViewModel.Email</dd>
                        <dt>موجودی کیف پول  : </dt>
                        <dd>@Model.UserInformationViewModel.Wallet</dd>
                        <dt>تاریخ عضویت : </dt>
                        <dd>@Model.UserInformationViewModel.RegisterDate.ToShamsi()</dd>
                        <dt></dt>
                        <dd>
                            <input type="submit" value="حذف" class="btn btn-danger" />
                        </dd>
                    </dl>
                </form>
           
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>