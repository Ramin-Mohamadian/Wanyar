@page "{id}"
@model Wanyar_Web.Pages.Admin.Roles.DeleteRoleModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                حذف نقش
            </div>
            <div class="panel-body">
                <p>
                    <h1 class="alert alert-warning">
                        آیا از حذف '@Model.role.RoleTitle' مطمئن هستید؟
                    </h1>

                </p>
                <form method="post">
                    <input type="hidden" asp-for="role.RoleId" />
                    <dl class="dl-horizontal">
                        <dt> عنوان نقش : </dt>
                        <dd>@Model.role.RoleTitle</dd>
                      
                        <dd>
                            <input type="submit" value="حذف" class="btn btn-danger" />
                        </dd>
                    </dl>
                </form>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>