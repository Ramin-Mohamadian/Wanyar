
@{
    ViewData["Title"] = "ActiveAccount";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">وانیار</a></li>
            <li class="breadcrumb-item active" aria-current="page">فعال سازی حساب کاربری</li>
        </ul>
    </nav>
</div>

@if(ViewBag.ActiveAccount==true)
{
    <div class="alert alert-success">
        <p>حساب شما با موفقیت فعال شد </p>
        <br />
        <p>
            <a href="/Login">ورود به سایت</a>
        <p>
    </div>
}
else
{
    <div class="alert alert-danger">
        <p>حساب کاربری با مشخصات ارسال شده یافت نشد</p>
        <br />
      
    </div>
}
