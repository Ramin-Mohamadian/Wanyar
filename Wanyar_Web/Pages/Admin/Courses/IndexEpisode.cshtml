@page "{id}"
@model Wanyar_Web.Pages.Admin.Courses.IndexEpisodeModel
@{
}



<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست  قسمت های دوره</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<a asp-page="CreateEpisode" asp-route-id="@ViewData["CourseId"].ToString()" class="btn btn-success">افزودن جلسه جدید </a>


<p></p>
<table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
    <thead>
        <tr>
            <th>عنوان جلسه</th>
            <th>زمان جلسه</th>
            <th>رایگان است</th>
            <th>دستورات</th>
        </tr>
    </thead>
       <tbody>
        @foreach (var item in Model.CourseEpisodes)
        {
            <tr>            
                <td>@item.EpisodeTitle</td>
                <td>@item.EpisodeTime</td>
                <td>
                    @if(item.IsFree)
                    {
                      <span class="text-info">
                          <i class="glyphicon glyphicon-ok"></i>
                      </span>
                    }
                    else
                    {
                        <span class="text-danger">
                            <i class="glyphicon glyphicon-remove"></i>
                        </span>
                    }
                </td>
                <td>
                    <a href="/Admin/Courses/EditeEpisode/@item.EpisodeId" class="btn btn-warning btn-sm">
                        ویرایش
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
