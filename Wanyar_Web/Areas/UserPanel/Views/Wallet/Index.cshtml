@model ChargeWalletViewModel
@using Wanyar.Core.DTOs;
@using Wanyar.Core.Convertors;
@using Wanyar.Core.DTOs;
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">وانیار</a></li>
            <li class="breadcrumb-item active" aria-current="page">کیف پول شما</li>
        </ul>
    </nav>
</div>




<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> کیف پول </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="Index" method="post">
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-money-box"></i></span>
                                            <input type="number" asp-for="Amont" class="form-control" placeholder="مبلغ" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="Amont"></span>
                                    </div>

                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success">شارژ کیف پول</button>
                                    </div>
                                </div>

                            </form>
                            @{
                                List<WalletViewModel> list = ViewBag.wallet as List<WalletViewModel>;
                            }
                            <br />
                            <table class="table table-bordered">
                                <tr>
                                    <th>مبلغ</th>
                                    <th>تاریخ</th>
                                    <th>شرح</th>
                                    <th>نوع</th>
                                </tr>
                                @foreach (var item in list)
                                {
                                    <tr>
                                        <td>@item.Amount.ToString("#,0"+" تومان")</td>
                                        <td>@item.DateTime.ToShamsi()</td>
                                        <td>@item.Description</td>
                                        @if (item.TypeId==1)
                                        {
                                            <td class="text-success">واریز به حساب</td>
                                        }
                                        else if(item.TypeId==2)
                                        {
                                            <td class="text-danger">برداشت</td>
                                        }
                                    </tr>
                                }
                            </table>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

