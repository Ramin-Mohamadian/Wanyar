@page
@model Wanyar_Web.Pages.Admin.Users.ListDeleteUsersModel
@using Wanyar.Core.Convertors;
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران حذف شده</h1>
    </div>
    <!-- /.col-lg-12 -->
</div> 

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            جدول لیست کاربران
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <div class="row">
                        <form>
                            <div class="col-sm-5 col-md-5">
                                <input type="text" name="FilterUserName" class="form-control" placeholder="نام کاربری" />
                            </div>
                            <div class="col-sm-5 col-md-5">
                                <input type="text" name="FilterEmail" class="form-control" placeholder="ایمیل" />
                            </div>
                            <div class="col-sm-2 col-md-2">
                                <button type="submit" class="btn btn-info">جستجو</button>
                                <a class="btn btn-default btn-sm" href="/Admin/Users">پاک کردن فیلتر ها</a>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-12" style="margin: 10px 0;">

                        <a href="/Admin/Users/CreateUser" class="btn btn-outline btn-success">افزودن کاربر جدید</a>

                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_length" id="dataTables-example_length">
                            </div>
                        </div><div class="col-sm-6"><div id="dataTables-example_filter" class="dataTables_filter"></div></div>
                    </div><table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th class="text-center">نام کاربری</th>
                                <th class="text-center">ایمیل</th>
                                <th class="text-center">وضعیت</th>
                                <th class="text-center">تاریخ ثبت نام</th>
                                <th class="text-center">دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UserForAdminViewModel.GetUser)
                            {
                                <tr class="gradeA odd text-center">
                                    <td class="sorting_1 text-center">@item.UserName</td>
                                    <td class="text-center">@item.Email</td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <p class="text-success">فعال</p>
                                        }
                                        else
                                        {
                                            <p class="text-success">غیر فعال</p>
                                        }
                                    </td>
                                    <td class="text-center ">@item.RegisterDate.ToShamsi()</td>
                                    <td class="text-center ">
                                        <a class="btn btn-warning" href="/Admin/Users/EditeUser/@item.UserId">ویرایش</a>
                                        <a class="btn btn-danger" href="/Admin/Users/DeleteUser/@item.UserId">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                <ul class="pagination">

                                    @for (int i = 1; i <= Model.UserForAdminViewModel.PageCount; i++)
                                    {
                                        <li class="paginate_button @((i==Model.UserForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                            <a href="/Admin/Users?PageId=@i">@i</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>